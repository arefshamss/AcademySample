                                @foreach (var item in Model.Entities ?? [])
                                {
                                    <tr data-tw-merge="" class="[&_td]:last:border-b-0">

                                        <td data-tw-merge=""
                                            class="px-5 border-b dark:border-darkmode-300 w-80 border-dashed py-4 dark:bg-darkmode-600">
                                            <div class="whitespace-nowrap font-medium">
                                                @item.Title
                                            </div>
                                        </td>

                                        <td data-tw-merge=""
                                            class="px-5 border-b dark:border-darkmode-300 border-dashed py-4 dark:bg-darkmode-600">
                                            <div class="whitespace-nowrap font-medium">
                                                @item.TicketPriority.GetEnumName()
                                            </div>
                                        </td>

                                        <td data-tw-merge=""
                                            class="px-5 border-b dark:border-darkmode-300 border-dashed py-4 dark:bg-darkmode-600">
                                            <div class="whitespace-nowrap font-medium">
                                                @($"{item.User.FirstName} {item.User.LastName}")
                                            </div>
                                        </td>

                                        <td data-tw-merge=""
                                            class="px-5 border-b dark:border-darkmode-300 border-dashed py-4 dark:bg-darkmode-600">
                                            <div class="flex items-center">
                                                @item.CreatedDate.ToShamsi()
                                            </div>
                                        </td>
                                        <td data-tw-merge=""
                                            class="px-5 border-b dark:border-darkmode-300 border-dashed py-4 dark:bg-darkmode-600">
                                            @switch(item.TicketStatus)
                                            {
                                            case TicketStatus.InProgress:
                                                <span class="text-yellow-700 bg-primary/5 border border-yellow-700 rounded-full px-2 py-0.5 text-nowrap">در حال بررسی</span>
                                                break;
                                                
                                                case TicketStatus.SupporterAnswered:
                                                    <span class="text-green-700 bg-primary/5 border border-green-700 rounded-full px-2 py-0.5 text-nowrap">پاسخ داده شده</span>
                                                    break;     
                                                    
                                                case TicketStatus.PendingForUserAnswer:
                                                    <span class="text-blue-700 bg-primary/5 border border-blue-700 rounded-full px-2 py-0.5 text-nowrap">در انتظار پاسخ کاربر</span>
                                                    break;        
                                                    
                                                case TicketStatus.Closed:
                                                    <span class="text-red-700 bg-primary/5 border border-red-700 rounded-full px-2 py-0.5 text-nowrap">بسته شده</span>
                                                    break;
                                            }
