                                                       class="h-4 w-4"></i>
                                                </a>

                                                <a asp-area="Admin"
                                                   asp-controller="Ticket"
                                                   asp-action="Update"
                                                   asp-route-id="@item.Id"
                                                   asp-ajax="true"
                                                   asp-ajax-modal-type="Medium"
                                                   asp-ajax-modal-title="ویرایش تیکت"
                                                   asp-ajax-validation="true"
                                                   class="removeAfterDelete @(item.IsDeleted ? "hidden" : "") cursor-pointer flex items-center p-2 transition duration-300 ease-in-out rounded-md hover:bg-slate-200/60 dark:bg-darkmode-600 dark:hover:bg-darkmode-400 dropdown-item"
