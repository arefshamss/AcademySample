@model Academy.Domain.ViewModels.Common.PagingViewModel


@if (Model.EndPage > 1)
{
    <nav class="rtl:ml-auto ltr:mr-auto w-full flex-1 sm:w-auto">
        <ul class="flex w-full rtl:ml-0 ltr:mr-0 rtl:sm:ml-auto ltr:sm:mr-auto sm:w-auto">

            @if (Model.StartPage < Model.Page)
            {
                if (!string.IsNullOrWhiteSpace(Model.FormId))
                {
                    <li class="flex-1 sm:flex-initial">
                        <a data-tw-merge="" onclick="FillPageIdByFromId(@(Model.Page - 1) , '@Model.FormId')"
                           class="transition duration-200 border items-center justify-center py-2 rounded-md cursor-pointer focus:ring-4 focus:ring-primary focus:ring-opacity-20 focus-visible:outline-none dark:focus:ring-slate-700 dark:focus:ring-opacity-50 [&:hover:not(:disabled)]:bg-opacity-90 [&:hover:not(:disabled)]:border-opacity-90 [&:not(button)]:text-center disabled:opacity-70 disabled:cursor-not-allowed min-w-0 sm:min-w-[40px] shadow-none font-normal flex border-transparent text-slate-800 rtl:sm:ml-2 ltr:sm:mr-2 dark:text-slate-300 px-1 sm:px-3">
                            <i data-tw-merge="" data-lucide="chevron-left"
                               class="stroke-[1] h-4 w-4 rtl:rotate-180"></i>
                        </a>
                    </li>
                }
                else
                {
                    <li class="flex-1 sm:flex-initial">
                        <a data-tw-merge="" onclick="FillPageId(@(Model.Page - 1))"
                           class="transition duration-200 border items-center justify-center py-2 rounded-md cursor-pointer focus:ring-4 focus:ring-primary focus:ring-opacity-20 focus-visible:outline-none dark:focus:ring-slate-700 dark:focus:ring-opacity-50 [&:hover:not(:disabled)]:bg-opacity-90 [&:hover:not(:disabled)]:border-opacity-90 [&:not(button)]:text-center disabled:opacity-70 disabled:cursor-not-allowed min-w-0 sm:min-w-[40px] shadow-none font-normal flex border-transparent text-slate-800 rtl:sm:ml-2 ltr:sm:mr-2 dark:text-slate-300 px-1 sm:px-3">
                            <i data-tw-merge="" data-lucide="chevron-left"
                               class="stroke-[1] h-4 w-4 rtl:rotate-180"></i>
                        </a>
                    </li>
                }
            }

            @for (int i = Model.StartPage; i <= Model.EndPage; i++)
            {
                if (Model.Page == i)
                {
                    <li class="flex-1 sm:flex-initial">
                        <a data-tw-merge="" href="javascript:void(0)"
                           class="transition duration-200 border items-center justify-center py-2 rounded-md cursor-pointer focus:ring-4 focus:ring-primary focus:ring-opacity-20 focus-visible:outline-none dark:focus:ring-slate-700 dark:focus:ring-opacity-50 [&:hover:not(:disabled)]:bg-opacity-90 [&:hover:not(:disabled)]:border-opacity-90 [&:not(button)]:text-center disabled:opacity-70 disabled:cursor-not-allowed min-w-0 sm:min-w-[40px] shadow-none font-normal flex border-transparent text-slate-800 rtl:sm:ml-2 ltr:sm:mr-2 dark:text-slate-300 px-1 sm:px-3 !box dark:bg-darkmode-400">@i</a>
                    </li>
                }
                else
                {
                    if (!string.IsNullOrWhiteSpace(Model.FormId))
                    {   
                        <li class="flex-1 sm:flex-initial">
                            <a data-tw-merge=""
                               onclick="FillPageIdByFromId(@i , '@Model.FormId')"
                               class="transition duration-200 border items-center justify-center py-2 rounded-md cursor-pointer focus:ring-4 focus:ring-primary focus:ring-opacity-20 focus-visible:outline-none dark:focus:ring-slate-700 dark:focus:ring-opacity-50 [&:hover:not(:disabled)]:bg-opacity-90 [&:hover:not(:disabled)]:border-opacity-90 [&:not(button)]:text-center disabled:opacity-70 disabled:cursor-not-allowed min-w-0 sm:min-w-[40px] shadow-none font-normal flex border-transparent text-slate-800 rtl:sm:ml-2 ltr:sm:mr-2 dark:text-slate-300 px-1 sm:px-3">@i</a>
                        </li>
                    }
                    else
                    {
                        <li class="flex-1 sm:flex-initial">
                            <a data-tw-merge=""
                               onclick="FillPageId(@i)"
                               class="transition duration-200 border items-center justify-center py-2 rounded-md cursor-pointer focus:ring-4 focus:ring-primary focus:ring-opacity-20 focus-visible:outline-none dark:focus:ring-slate-700 dark:focus:ring-opacity-50 [&:hover:not(:disabled)]:bg-opacity-90 [&:hover:not(:disabled)]:border-opacity-90 [&:not(button)]:text-center disabled:opacity-70 disabled:cursor-not-allowed min-w-0 sm:min-w-[40px] shadow-none font-normal flex border-transparent text-slate-800 rtl:sm:ml-2 ltr:sm:mr-2 dark:text-slate-300 px-1 sm:px-3">@i</a>
                        </li>
                    }
                }
            }

            @if (Model.EndPage > Model.Page)
            {
                if (!string.IsNullOrWhiteSpace(Model.FormId))
                {
                    <li class="flex-1 sm:flex-initial">
                        <a data-tw-merge="" onclick="FillPageIdByFromId(@(Model.Page + 1) , '@Model.FormId')"
                           class="transition duration-200 border items-center justify-center py-2 rounded-md cursor-pointer focus:ring-4 focus:ring-primary focus:ring-opacity-20 focus-visible:outline-none dark:focus:ring-slate-700 dark:focus:ring-opacity-50 [&:hover:not(:disabled)]:bg-opacity-90 [&:hover:not(:disabled)]:border-opacity-90 [&:not(button)]:text-center disabled:opacity-70 disabled:cursor-not-allowed min-w-0 sm:min-w-[40px] shadow-none font-normal flex border-transparent text-slate-800 rtl:sm:ml-2 ltr:sm:mr-2 dark:text-slate-300 px-1 sm:px-3">
                            <i data-tw-merge="" data-lucide="chevron-right"
                               class="stroke-[1] h-4 w-4 rtl:rotate-180"></i>
                        </a>
                    </li>
                }
                else
                {
                    <li class="flex-1 sm:flex-initial">
                        <a data-tw-merge="" onclick="FillPageId(@(Model.Page + 1))"
                           class="transition duration-200 border items-center justify-center py-2 rounded-md cursor-pointer focus:ring-4 focus:ring-primary focus:ring-opacity-20 focus-visible:outline-none dark:focus:ring-slate-700 dark:focus:ring-opacity-50 [&:hover:not(:disabled)]:bg-opacity-90 [&:hover:not(:disabled)]:border-opacity-90 [&:not(button)]:text-center disabled:opacity-70 disabled:cursor-not-allowed min-w-0 sm:min-w-[40px] shadow-none font-normal flex border-transparent text-slate-800 rtl:sm:ml-2 ltr:sm:mr-2 dark:text-slate-300 px-1 sm:px-3">
                            <i data-tw-merge="" data-lucide="chevron-right"
                               class="stroke-[1] h-4 w-4 rtl:rotate-180"></i>
                        </a>
                    </li>
                }
            }
        </ul>
    </nav>
}