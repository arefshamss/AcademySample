@using Academy.Application.Extensions
@model List<Academy.Domain.ViewModels.Captcha.AdminSideCaptchaViewModel>
@{
    ViewData["Title"] = "لیست کپتچا ها";
}

@section Breadcrumb

{
    <admin-breadcrumb>
        <admin-breadcrumb-item>مدیریت سایت</admin-breadcrumb-item>
        <admin-breadcrumb-item last-active-item="true">@ViewData["Title"]</admin-breadcrumb-item>
    </admin-breadcrumb>
}


<div class="mt-3.5 grid grid-cols-12 gap-x-6 gap-y-7 lg:gap-y-10 xl:grid-cols-10">
    <div class="relative order-first col-span-12 lg:order-last lg:col-span-3 xl:col-span-2">
        <div class="sticky top-[104px]">
            <ul class="relative flex flex-col rounded-[0.6rem] border border-primary/10 bg-primary/[0.03] py-2.5 text-slate-600/80 group-[.mode--light]:border-slate-300/20 group-[.mode--light]:bg-slate-300/10">
                <li class="relative rtl:pr-5 ltr:pl-5 py-[9.2px] group-[.mode--light]:text-white/90 [&.active]:text-primary [&.active]:font-medium [&.active]:before:bg-primary/70 [.group.mode--light_&.active]:text-white [.group.mode--light_&.active]:before:bg-white active before:content-[''] before:absolute before:h-[60%] before:w-0.5 rtl:before:right-0 ltr:before:left-0 before:inset-y-0 active before:my-auto rtl:before:-mr-px ltr:before:-ml-px">
                    <a class="-mt-px block truncate" asp-area="Admin" asp-controller="Captcha" asp-action="List">
                        لیست کپتچا ها
                    </a>
                </li>
                <li class="relative rtl:pr-5 ltr:pl-5 py-[9.2px] group-[.mode--light]:text-white/90 [&.active]:text-primary [&.active]:font-medium [&.active]:before:bg-primary/70 [.group.mode--light_&.active]:text-white [.group.mode--light_&.active]:before:bg-white before:content-[''] before:absolute before:h-[60%] before:w-0.5 rtl:before:right-0 ltr:before:left-0 before:inset-y-0 before:my-auto rtl:before:-mr-px ltr:before:-ml-px">
                    <a class="-mt-px block truncate" asp-area="Admin" asp-controller="Captcha" asp-action="Create">
                        افزودن کپتچا
                    </a>
                </li>
                <li class="relative px-5 py-[9.2px] group-[.mode--light]:text-white/90 [&.active]:text-primary [&.active]:font-medium [&.active]:before:bg-primary/70 [.group.mode--light_&.active]:text-white [.group.mode--light_&.active]:before:bg-white before:content-[''] before:absolute before:h-[60%] before:w-0.5 rtl:before:right-0 ltr:before:left-0 before:inset-y-0 before:my-auto rtl:before:-mr-px ltr:before:-ml-px">
                    <a class="-mt-px block truncate" asp-area="Admin" asp-controller="CaptchaSetting" asp-action="Update">
                        تنظیمات کپتچای سایت
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="relative col-span-12 flex flex-col gap-y-7 lg:col-span-9 xl:col-span-8">
        <div class="box box--stacked flex flex-col">
            <div class="flex flex-col gap-y-2 p-5 sm:flex-row sm:items-center">
                <h3 class="text-base font-bold opacity-95">@ViewData["Title"]</h3>
            </div>
            <div class="overflow-auto xl:overflow-visible">
                @if (Model != null && Model.Any())
                {
                    <table data-tw-merge="" class="w-full rtl:text-right ltr:text-left border-b border-slate-200/60">
                        <thead data-tw-merge="" class="">
                        <tr data-tw-merge="" class="">
                            <td data-tw-merge=""
                                class="px-5 border-b dark:border-darkmode-300 border-t border-slate-200/60 bg-slate-50 py-4 font-medium text-slate-500">
                                نام کپتچا
                            </td>
                            <td data-tw-merge=""
                                class="px-5 border-b dark:border-darkmode-300 border-t border-slate-200/60 bg-slate-50 py-4 font-medium text-slate-500">
                                نوع کپتچا
                            </td>
                            <td data-tw-merge=""
                                class="px-5 border-b dark:border-darkmode-300 border-t border-slate-200/60 bg-slate-50 py-4 font-medium text-slate-500">
                                وضعیت
                            </td>
                            <td data-tw-merge=""
                                class="px-5 border-b dark:border-darkmode-300 border-t border-slate-200/60 bg-slate-50 py-4 text-center font-medium text-slate-500">
                                عملیات
                            </td>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr data-tw-merge="" class="[&_td]:last:border-b-0">
                                <td data-tw-merge=""
                                    class="px-5 border-b dark:border-darkmode-300 border-dashed py-4 dark:bg-darkmode-600">
                                    <div class="flex items-center">
                                        @item.Title
                                    </div>
                                </td>
                                <td data-tw-merge=""
                                    class="px-5 border-b dark:border-darkmode-300 border-dashed py-4 dark:bg-darkmode-600 min-w-64">
                                    <div class="flex items-center">
                                        @item.CaptchaType.GetEnumName()
                                    </div>
                                </td>
                                <td data-tw-merge=""
                                    class="px-5 border-b dark:border-darkmode-300 border-dashed py-4 dark:bg-darkmode-600">
                                    <div class="flex items-center">
                                        <div
                                            class="flex items-center @(item.IsActive ? "text-success" : "text-danger")">
                                            <i data-tw-merge="" data-lucide="@(item.IsActive ? "check" : "x")"
                                               class="h-3.5 w-3.5 stroke-[1.7]"></i>
                                            <div class="rtl:mr-1.5 ltr:ml-1.5 whitespace-nowrap">
                                                @(item.IsActive ? "فعال" : "غیرفعال")
                                            </div>
                                        </div>
                                    </div>
                                </td>

                                <td data-tw-merge=""
                                    class="px-5 border-b dark:border-darkmode-300 relative border-dashed py-4 dark:bg-darkmode-600">
                                    <div class="flex items-center justify-center">
                                        <a class="cursor-pointer flex items-center p-2 transition duration-300 ease-in-out rounded-md hover:bg-slate-200/60 dark:bg-darkmode-600 dark:hover:bg-darkmode-400 dropdown-item"
                                           asp-area="Admin"
                                           asp-controller="Captcha"
                                           asp-action="Update"
                                           asp-route-id="@item.Id"
                                           asp-ajax-modal-title="ویرایش">
                                            <i data-tw-merge="" data-lucide="Edit"
                                               class="stroke-[1] rtl:ml-2 ltr:mr-2 h-4 w-4"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }

                        </tbody>
                    </table>
                }
                else
                {
                    <partial name="_NotFoundPartial"/>
                }
            </div>
        </div>

    </div>

</div>



