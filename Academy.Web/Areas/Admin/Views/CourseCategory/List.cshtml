                                            @*     <div class="flex items-center"> *@
                                            @*         <label>@child.Title</label> *@
                                            @*         <div *@
                                            @*             class="rounded-md border border-slate-200 bg-slate-100 px-2 py-0.5 text-xs text-slate-500 dark:bg-darkmode-300 dark:text-slate-400"> *@
                                            @*             @item.Title *@
                                            @*         </div> *@
                                            @*     </div> *@
                                            @* </td> *@
                                            
                                            
                                            <td class="relative ps-8 before:content-[''] before:absolute before:right-3 before:top-0 before:h-full before:w-px before:bg-gray-300">
                                                <div class="flex items-center gap-3">
                                                    <label>@child.Priority</label>
                                                </div>
                                            </td>
                                            
                                            <td class="px-5 border-b dark:border-darkmode-300 border-dashed py-2 dark:bg-darkmode-600">
                                                <div class="flex items-center gap-2">
                                                    <span class="text-gray-400">↲</span>
                                                    <label>@child.Title</label>
                                                    <div class="rounded-md border border-slate-200 bg-slate-100 px-2 py-0.5 text-xs text-slate-500 dark:bg-darkmode-300 dark:text-slate-400">
                                                        @item.Title
