                                                <div class="flex items-center">
                                                    <a asp-area="Admin"
                                                       asp-controller="CourseCategory"
                                                       asp-action="Update"
                                                       asp-route-id="@child.Id"
                                                       class="removeAfterDelete @(child.IsDeleted ? "hidden" : "") cursor-pointer flex items-center p-2 transition duration-300 ease-in-out rounded-md hover:bg-slate-200/60 dark:bg-darkmode-600 dark:hover:bg-darkmode-400 dropdown-item"
                                                       title="ویرایش">
                                                        <i
                                                            data-tw-merge="" data-lucide="check-square"
                                                            class="stroke-[1] h-4 w-4"></i>
                                                    </a>

                                                    @if (child.IsDeleted)
